    <style>
        body {
            background-color: #f6f9ff !important;
        }

        .mentor-section-header {
            margin: auto;
            text-align: center;
            margin-bottom: 0;
        }

        .Mentors-section {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;

        }

        .mentor-card {
            cursor: pointer;
            padding: 1em;
            width: 290px;
            margin: 1em;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);


        }

        .mentor-card:hover {

            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
            transform: scale(1.05);
            transition: all 0.3s ease-in-out;

        }


        .mentor-details-section {
            margin: auto;
            margin-bottom: 0;
            width: 80%;
            margin: 1em;
            padding: 1em;
            border-radius: 5px;
            /* box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2); */


        }

        .upper-profile-section {
            display: flex;

        }

        .details-left-section {
            width: 50%;
            margin: auto;
            text-align: center;

        }

        .image-right-section {
            width: 50%;
            margin: auto;
            text-align: left;
            padding: 1em;
            font-size: larger;

        }

        .batch-mentor {

            background-color: #efefef;
            width: fit-content;
            padding: 0.2rem 0.5rem;
            border-radius: 10px;
        }

        .brief-details-mentor-section {
            padding: 1em;
        }

        .mentor-image {
            /* Image responsive */
            height: auto;
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            object-position: center;
            border-radius: 50%;
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
            border-radius: 0.1px solid #000;
            margin-top: -10px;

        }




        .detail-sec {
            width: 10em;
        }

        .mentor-detail-image {
            margin: auto !important;
            text-align: center !important;
        }

        .text-start {
            text-align: start;
        }

        .small-text {
            font-size: 14px;
        }

        .profile-name {
            margin-top: -20px;
        }

        .flex-cols {
            display: flex;
            flex-direction: column;
            gap: 5px;
            text-align: start;
            align-items: start;
        }

        @media (max-width: 1079px) {
            .mentor-image {
                margin-top: 0;
            }

            .profile-name {
                margin-top: 10px;
            }

            .small-text {
                font-size: 12px;
            }
        }
    </style>
</head>

