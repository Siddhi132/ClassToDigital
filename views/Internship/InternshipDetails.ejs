<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Internship details</title>
<link rel="stylesheet" href="styles/Internship/InternshipDetails.css">
</head>
<body>


    <% if(login){ %>
        <% if(typeof role!="undefined" && role){ %>
            <% if(role=="student"){ %>
                <%- include('../Navbar/StudentNavbar.ejs') %>
            <% }else if(role=="mentor"){ %>
                <%- include('../Navbar/MentorNavbar.ejs') %>
            <% }else if(role=="admin"){ %>
                <%- include('../Navbar/AdminNavbar.ejs') %>
            <% }else if(role=="company"){ %>
                <%- include('../Navbar/CompanyNavbar.ejs') %>
            <% } %>
        <% } %>
        
        <% }else { %>
            <%- include('../Navbar/InitNavbar.ejs') %>
        <% } %>








        

    <% internship.forEach(function(item){ %>
         <!--Main layout-->
    <main class="pt-4 mb-2">
        <div class="container mt-4 ">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center "><%= item.position  %></h1>
                    <h3 class="text-center "><%= item.companyName  %></h1>
                </div>
            </div>
        </div>
        <div class="container card mt-3" style="padding: 1em;">
            <!--Grid row-->
            <div class="row">
               
     

                <!--Grid column-->
                <div class="col-md-8 mb-4">
                    <!--Content-->


                    <div class="p-4">
                        <div class="subDetailsParent">
                            <% if (item.status== "true") { %>
                                <span class="bagdeInternshipDetails  me-1 p-lg-1 mt-2">Active</span>
                            <% } else { %>
                                <span class="bagdeInternshipDetails  me-1 p-lg-1 mt-2">Closed</span>
                            <% } %>
                            <span class="badge-int-cat  me-1 p-lg-1 mt-2"><%= item.category %></span>
                            
                        </div>
                        <br>
                        <i class="fa-regular fa-user"></i>
                        <span class=""><%= item.totalNumberOfApplicants %> +Applications</span>

                        <p><i class="fa-solid fa-location-dot mt-4 text-black"></i>
                            <span class="text-black"><%= item.location  %></span>
                        <div class="mb-3">
                           <div style="" class="mainDetailsInternship mb-3">
                            <a href="">
                                <span class="bagdeInternshipDetails  me-1 p-lg-1">Start Date</span>
                                <p><i class="fa-solid fa-calendar-days mt-4 text-black"></i>
                                    <span class="text-black"><%= item.dateOfPosting.split('T')[0]  %></span>
                          
                                </p>
                            </a>
                            <a href="">
                                <span class="bagdeInternshipDetails  me-1 p-lg-1">Duration</span>
                                <p><i class="fa-solid fa-clock mt-4 text-black"></i>
                                    <span class="text-black"><%= item.duration  %></span>
                          
                                </p>
                            </a>
                            <a href="">
                                <span class="bagdeInternshipDetails  me-1 p-lg-1">Stipend</span>
                                <p><i class="fa-solid fa-money-bill mt-4 text-black"></i>
                                    <span class="text-black"><%= item.stipend  %></span>
                          
                                </p>
                            </a>
                            <a href="">
                                <span class="bagdeInternshipDetails  me-1 p-lg-1">Apply By</span>
                                <p><i class="fa-solid fa-calendar-days mt-4 text-black"></i>
                                    <span class="text-black"><%= item.lastDateToApply.split('T')[0]  %></span>
                          
                                </p>
                            </a>
                           </div>
                           
                           <strong>
                            <p style="font-size: 20px;" >Skills Required</p>
                        </strong>
                            <a href="">
                                <div class="mt-3 text-black" style="display: flex; gap: 0.5em; flex-wrap: wrap; ">
                          
                                    <% var skills = item.skillsRequired.split(','); %>
                                    <% skills.forEach(function(skill){ %>
                                        
                                            <span class="badge badge-primary me-1 p-md-2 skillsBadgeText"><%= skill %></span>
                                            <% }) %>

                                    
                                   

                                </div>
                            </a>
                  
                        </div>

                        <strong>
                            <p style="font-size: 20px;">Internship Description</p>
                        </strong>

                        <p><%= item.briefDescription %></p>

                        
                    </div>
                    <!--Content-->
                </div>
                <!--Grid column-->
                           <!--Grid column-->
                           <div class="col-md-4 mb-4">
                            <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/14.jpg"
                            class="img-fluid" alt="" />
                        </div>
                        <!--Grid column-->
            </div>
            <!--Grid row-->

            <hr />

            <!--Grid row-->
            <div class="row d-flex justify-content-center ">
                <!--Grid column-->
                <div class="col-md-9 mb-4">
                    <h4 class="my-4 h4">Roles and Resposibilities</h4>

                    <p><%= item.rolesAndResponsibilities %></p>
                    <h4 class="my-4 h4">Perks</h4>

                    <p><%= item.perks %></p>
                    <h4 class="my-4 h4">Who can apply</h4>

                    <p><%= item.whoCanApply%></p>
                    <h4 class="my-4 h4">Criteria For Selection</h4>

                    <p><%= item.criteriaForSelection  %></p>
                    <h4 class="my-4 h5">Contact Details</h4>
                    <p><%= item.contactDetails %></p>
                    <h4 class="my-4 h5">Other Details</h4>
             
                    <span class="badge-int-appl  me-1 p-lg-1 mt-2 "><%= item.paidOrUnpaid%></span>
                    <span class="badge-int-appl  me-1 p-lg-1 mt-2"><%= item.modeOfInternship%></span>

                    
                </div>
                <br>
                <hr>
                    <div class="d-flex flex-row-reverse">
                        <div class="">
                            <button class="btn btn-secondary">Apply Now</button>
                        </div>
                    
                    </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->

        </div>
    </main>
    <!--Main layout-->
       
    <% }) %>

    

        
        <!-- Fotter -->
        <%- include('../Footer/Footer.ejs') %>
</body>
</html>